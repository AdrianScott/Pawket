{
    "manifest_version": 3,
    "name": "Pawket",
    "description": "Chia Wallet: Manage your CATs in Pawket!",
    "version": "0.0.1",
    "background": {
        "service_worker": "/js/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/js/content.js"
            ]
        }
    ]
}