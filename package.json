{
  "name": "pawket",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "author": "SutuLabs",
  "private": "true",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "serve": "cd ./packages/pawket && vue-cli-service serve",
    "build:all": "yarn check-i18n --ci && yarn jest --ci && yarn build:pawket && yarn build:mixch",
    "build:pawket": "cd ./packages/pawket && vue-cli-service build",
    "build:ext": "cross-env VUE_CLI_SERVICE_CONFIG_PATH=vue.config.ext.js vue-cli-service build",
    "build:mixch": "cross-env VUE_CLI_SERVICE_CONFIG_PATH=vue.config.mixch.js vue-cli-service build",
    "build:cli": "cd ./packages/cli && ncc build server.ts -o ../../dist/cli && cp ../../node_modules/clvm/browser/blsjs.wasm ../../dist/cli",
    "build:cli:docker": "yarn build:cli && docker build -f cli/Dockerfile -t wizicer/coin-processor:latest .",
    "build:cordova": "vue-cli-service build --env cordova",
    "lint": "vue-cli-service lint",
    "serve:ext": "cross-env VUE_CLI_SERVICE_CONFIG_PATH=vue.config.ext.js vue-cli-service --env.NODE_ENV=development build-watch --mode development",
    "serve:mixch": "cross-env VUE_CLI_SERVICE_CONFIG_PATH=vue.config.mixch.js vue-cli-service serve --port 8088",
    "check-i18n": "vue-i18n-extract report --vueFiles \"./src/**/*.?(js|ts|vue)\" --languageFiles \"./src/i18n/?(en|zh-cn).?(json|yml|yaml|js)\"",
    "check-i18n:all": "vue-i18n-extract report --vueFiles \"./src/**/*.?(js|ts|vue)\" --languageFiles \"./src/i18n/*.?(json|yml|yaml|js)\"",
    "serve:server": "nodemon cli/server.ts",
    "start": "cross-env MAX_THREAD=0 ts-node cli/server.ts",
    "importmods": "ts-node cli/importmods.ts",
    "compile": "ts-node cli/compile.ts",
    "brun": "ts-node cli/brun.ts",
    "publish:docker": "docker push wizicer/coin-processor:latest",
    "test": "cd ./packages/pawket-chia-lib && jest --coverage=false"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "lerna": "^6.6.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "webextensions": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "workspaces": [
    "packages/*"
  ]
}
