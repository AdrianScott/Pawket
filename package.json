{
  "name": "pawket",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "author": "SutuLabs",
  "private": "true",
  "scripts": {
    "dev": "cd ./packages/pawket && yarn dev",
    "dev:mixch": "cd ./packages/pawket && yarn dev:mixch",
    "dev:cli": "cd ./packages/cli && yarn dev",
    "build:all": "yarn check-i18n --ci && yarn build:pawket && yarn build:mixch",
    "build:pawket": "cd ./packages/pawket && yarn build:pawket",
    "build:ext": "cd ./packages/pawket && yarn build:ext",
    "build:mixch": "cd ./packages/pawket && yarn build:mixch",
    "build:cli": "cd ./packages/cli && yarn build",
    "build:cli:docker": "cd ./packages/cli && yarn build:docker",
    "build:cordova": "cd ./packages/pawket && yarn build:cordova",
    "check-i18n": "vue-i18n-extract report --vueFiles \"./packages/pawket/src/**/*.?(js|ts|vue)\" --languageFiles \"./packages/pawket/src/i18n/?(en|zh-cn).?(json|yml|yaml|js)\"",
    "check-i18n:all": "vue-i18n-extract report --vueFiles \"./packages/pawket/src/**/*.?(js|ts|vue)\" --languageFiles \"./packages/pawket/src/i18n/*.?(json|yml|yaml|js)\"",
    "importmods": "cd ./packages/cli && yarn importmods",
    "test:lib": "cd ./packages/pawket-chia-lib && jest --coverage=false",
    "test:cli": "cd ./packages/cli && jest --coverage=false",
    "test": "yarn test:cli && yarn test:lib"
  },
  "devDependencies": {
    "vue-i18n-extract": "^2.0.4"
  },
  "workspaces": [
    "packages/*"
  ]
}
